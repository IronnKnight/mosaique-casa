<div class="col-lg-5 mb-3 bg-white rounded p-3 align-self-start">
    <form {{on "submit" @createReservation}}>
        <div class="col-lg mb-4">
            <label class="form-label">Name: </label>
            <Input @type="text" name="name" @value="" class="casa-reservation-fc-input form-control" />
        </div>
        <div class="col-lg mb-4">
            <label class="form-label">Number of people: </label>
            <Input @type="number" @value="1" name="people" class="casa-reservation-fc-input form-control" />
        </div>
        <button type="submit" class="btn btn-success">Make reservation</button>
    </form>
</div>